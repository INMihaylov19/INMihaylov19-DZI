@model TMS.Services.Models.TaskUM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model != null)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="card mb-5 box-shadow mt-5">
                <div class="card-body">
                    <div class="row">
                        <div class="text-center mb-4 mt-5">
                            <h2>Обновяване на задача</h2>
                        </div>
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="UserId" />

                            <div class="form-group">
                                <label asp-for="Name">Име на задача</label>
                                <input asp-for="Name" class="form-control" placeholder="Въведете име на задача">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Описание</label>
                                <input asp-for="Description" class="form-control" placeholder="Въведете описание">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate">Начална дата</label>
                                <input asp-for="StartDate" class="form-control" type="datetime-local">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DueDate">Крайна дата</label>
                                <input asp-for="DueDate" class="form-control" type="datetime-local">
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Category">Категория</label>
                                <select asp-for="Category" asp-items="@Html.GetEnumSelectList<TMS.Data.Enums.TaskCategory>()">
                                    <option>--Изберете--</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Priority">Приоритет</label>
                                <select asp-for="Priority" asp-items="@Html.GetEnumSelectList<TMS.Data.Enums.TaskPriority>()">
                                    <option>--Изберете--</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Status">Статус</label>
                                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<TMS.Data.Enums.TaskStatus>()">
                                    <option>--Изберете--</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Обновяване</button>
                                <a asp-action="Index" class="btn btn-secondary">Откажи</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

else
{
    <p>The model is null</p>
}


