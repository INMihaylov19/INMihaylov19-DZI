@model TMS.WebHost.Models.UserIM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="card mb-5 box-shadow mt-5">
            <div class="card-body">
                <div class="row">
                    <div class="text-center mb-4 mt-5">
                        <h2>Създаване на потребител</h2>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Извинете!</b> - @TempData["Error"]</span>
                        </div>
                    }
                    <form method="post" asp-action="Create" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="FirstName">Първо име</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Въвете първо име">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Фамилно име</label>
                            <input asp-for="LastName" class="form-control" placeholder="Въведете фамилно име">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username">Потребителско име</label>
                            <input asp-for="Username" class="form-control" placeholder="Въведете потребителско име">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Имейл</label>
                            <input asp-for="Email" class="form-control" placeholder="Въведете имейл">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Парола</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Въведете парола">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Role">Role</label>
                            <select asp-for="Role" asp-items="@Html.GetEnumSelectList<TMS.Data.Enums.UserRole>()">
                                <option>--Select--</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Image" class="form-control p3"></label>
                            <input asp-for="Image" name="Image" type="file" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Създаване</button>
                            <a asp-action="Index" class="btn btn-secondary">Откажете</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
