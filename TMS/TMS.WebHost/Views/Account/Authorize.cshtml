@model TMS.Services.Models.UserVM


<form asp-action="AuthorizeConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Username">Потребителско име:</label>
        <p>@Model.Username</p>
        <span class="text-info">Сигурни ли сте, че искате да упълномощите този потребител?</span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Упълномощаване</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Откажете</a>
    </div>

</form>







